def NODEADRESS

pipeline {
    agent {
        docker {
            image 'node:lts-buster-slim'
            args '-p 3000:3000'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Prepare') {
            steps {
                sh 'echo "Installing Dependencies..."'
                dir('webapp') {
                    sh 'npm install --save-dev cross-env'
                }
                script {
                    NODEADRESS = sh ('echo $(substr(${JENKINS_URL},1,length(${JENKINS_URL}-5)))')
                }
                echo NODEADRESS
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Testing..."'
                dir ('webapp') {
                    sh 'npm test'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh 'echo "Delivering..."'
                dir ('webapp') {

                    sh 'npm run build'
                    sh 'npm start &'
                    sh 'sleep 1'
                    input message: 'Open a browser and go to http://${NODEADDRESS}:3000.\r\nFinished using the web site? (Click "Proceed" to continue)'

                }
            }
        }
    }
}
