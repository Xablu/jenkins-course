pipeline {
    agent {
        docker {
            image 'node:lts-buster-slim'
            args '-p 3000:3000'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Testing..."'
                sh 'npm test'
            }
        }
        stage('Deliver') {
            steps {
                sh 'echo "Delivering..."'
                sh 'npm run build'
                sh 'npm start &'
                sh 'sleep 1'
                sh 'echo "Visit http://<jenkins-host>:3000 from your webbrowser"'
                sh 'echo "(This is why you specified the "args ''-p 3000:3000''" parameter when you"'
                sh 'echo "created your initial Pipeline as a Jenkinsfile.)"'

            }
        }
    }
}